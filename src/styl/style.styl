		position absolute
		top 10px
		right 20px
		border-bottom none
		.cart-indicator
			position relative
			overflow hidden
			i
				font-size 16px
				color $grey
				transition color 200ms
			span
				position absolute
				top -5px
				right -12px
				display block
				width 16px
				height 16px
				background-color $main
				border-radius 20px
				font-size 9px
				font-weight 400
				color $white
				text-align center
				padding-top 2px
		&:hover
			.cart-indicator
				i
					color $para
	.copyright
		padding-top 20px
		color $grey
		font-size 13px
	.widgets-block
		margin 50px 0
		.widget
			margin 0 0 80px
			&:last-of-type
				margin-bottom 0
			.title
				display block
				color $grey
				margin 0 0 5px
				font-weight 400
				font-size 11px
				letter-spacing 0.4px
				text-transform uppercase
				&:after
					content ''
					display block
					width 100%
					height 1px
					background-color alpha($grey, 0.12)
					margin-top 3px
			ul
				list-style none
				margin 0
				padding 0
				li
					display block
					padding 5px 0
			&.filter
				li
					color $header
					transition color 100ms
					&.active
						color $main
					&:hover
						color $main
						cursor pointer
			&.twitter
				ul
					li
						line-height 1.7
						font-size 13px
						padding 15px 0
						&:first-child
							padding-top 0
						&:last-child
							padding-bottom 0
						.time
							display block
							margin 7px 0 0
							color $grey
							font-size 13px
							border none
							&:hover
								color $main
			&.recent-projects
				ul
					li
						a
							display block
							border none
							color $para
							width 100%
							overflow hidden
							text-overflow ellipsis
							white-space nowrap
							&:hover
								color $main
			&.blog-categories
				ul
					li
						a
							display block
							border none
							color $para
							width 100%
							overflow hidden
							text-overflow ellipsis
							white-space nowrap
							&:hover
								color $main
			&.tags
				ul
					li
						display inline-block
						margin 5px 0
						padding 0
						a
							display block
							color $grey
							border none
							background-color alpha($grey, 0.1)
							padding 6px 12px
							font-size 13px
							border-radius 150px
							white-space nowrap
							transition background-color 200ms, color 200ms
							&:hover
								color $para
								background-color alpha($grey, 0.2)

/*
	4. Main
*/
#main
	float left
	overflow hidden
	width 75%
	.main-outer
		overflow hidden
		padding-left 30px

/*
	5. Works Grid
*/
#works-grid
	overflow hidden
	.gutter
		width 2.35%
	.works-item
		display block
		position relative
		overflow hidden
		border none
		width 31.75%
		margin-bottom 2.35%
		padding-bottom 0
