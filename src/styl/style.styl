			.share-block
				text-align center
				margin-top 3px
				ul
					list-style none
					margin auto
					padding 0
					li
						display inline-block
						a
							display block
							padding 5px
							color $grey
							border none
							font-size 14px
							&:hover
								color $main
	&.alternate
