$black 		= #000000
$white 		= #ffffff
$main 		= #48ba86
$header 	= #0e0e0e
$para 		= #6d6d6d
$grey 		= #bfbfbf

/*
	Contents:
	1. Google Fonts Import
	2. Common Styles
	3. Sidebar
	4. Main
	5. Works Grid
	6. Index Page
	7. Project Page
	8. About Page
	9. Blog Page
	10. Blog Single
	11. Contact Page
	12. Responsive
*/

/*
	1. Google Fonts Import
*/
@import 'https://fonts.googleapis.com/css?family=Roboto:300,400'
@import 'https://fonts.googleapis.com/css?family=Lora:400,400italic'

/*
	2. Common Styles
*/
body
	font-family 'Roboto', 'Tahoma', 'Arial', sans-serif
	font-weight 300

.global-outer
	width 100%
	max-width 1440px
	margin-left auto
	margin-right auto
	overflow hidden
	position relative
	opacity 0
	animation-fill-mode both
	.global-inner
		padding 60px
		overflow hidden

h1,
h2,
h3,
h4,
h5,
h6
	font-weight 300
	line-height 1.8
	color $header
	font-family 'Lora', serif

h1
	font-size 36px

h2
	font-size 28px

h3
	font-size 22px
	
h4
	font-size 18px

h5
	font-size 16px

h6
	font-size 12px

p
	font-size 15px
	line-height 1.8
	color $para
	&.lead
		font-size 19px

a
	color $main
	border-bottom 1px solid alpha($main, 0)
	padding-bottom 1px
	transition color 200ms, border-color 200ms
	&:hover,
	&:active,
	&:focus
		color darken($main, 15)
		text-decoration none
		border-color alpha($main, 0.3)
	&:focus
		outline none
		
ul
	font-size 15px
	color $para

blockquote
	font-size 18px
	font-family 'Lora'
	font-style italic
	line-height 2
	padding-top 15px
	padding-bottom 15px
	color alpha($para, 0.7)

input,
textarea
	display block
	width 100%
	max-width 100%
	border none
	background-color alpha($black, 0.04)
	padding 10px
	font-size 13px
	border-radius 2px
	border-bottom 1px solid transparent
	transition background-color 200ms, border-color 300ms, border-radius 100ms
	box-sizing border-box
	&:focus
		background-color $white
		border-radius 0
		border-color alpha($black, 0.08)

.btn
	display inline-block
	text-align center
	margin auto
	background-color $main
	color $white
	font-size 13px
	border-radius 2px
	padding 8px 14px
	transition background-color 200ms
	&:hover
		background-color darken($main, 10)
		color $white
	&:active
		background-color darken($main, 15)
	&:focus
		color $white
	&.small
		padding 5px 10px
	&.large
		padding 12px 18px

::selection
	background-color $main
	color $white

.carousel
	position relative
	overflow hidden
	&:after
		content ''
		position absolute
		bottom -55px
		left 0
		display block
		width 100%
		height 55px
		box-shadow inset 0 -50px 50px -50px alpha($black, 0.5)
		transition bottom 300ms
	.carousel-indicators
		bottom 0
		li
			position relative
			display inline-block
			width 10px
			height 10px
			border-radius 10px
			margin 0 3px
			border 1px solid $white
			overflow hidden
			transform translateY(100%)
			opacity 0
			for i in (1..15)
				&:nth-child({i})
					transition transform 200ms (i * 100)ms, opacity 200ms (i * 100)ms
			&:before
				content ''
				position absolute
				top 0
				left 0
				width 0
				height 100%
				background-color $white
				transition width 300ms
			&.active
				width 10px
				height 10px
				background-color transparent
				&:before
					width 100%
			&:hover
				&:before
					width 100%
	&:hover
		&:after
			bottom 0
		.carousel-indicators
			li
				transform translateY(0)
				opacity 1

.image-source-link
	color #98C3D1

.mfp-with-zoom
	&.mfp-container,
	&.mfp-bg
		opacity 0
		transition all 300ms ease-out
		backface-visibility hidden
	&.mfp-ready
		.mfp-container
			opacity 1
		&.mfp-bg
			opacity 0.8
	&.mfp-removing
		.mfp-container
			opacity 0
		&.mfp-bg
			opacity 0

.page-title
	h1
		margin 0
		line-height 1
	p
		margin-top 25px
	.page-title-image
		margin-top 30px
		img
			width 100%
/*
	3. Sidebar
*/
#sidebar
	width 25%
	float left
	overflow hidden
	.sidebar-inner
		padding-right 30px
	.logo
		display inline-block
		margin-bottom 30px
		padding 0
		border none
	nav
		padding 25px 0 10px
		color $header
		ul
			list-style none
			margin 0
			padding 0
			li
				a,
				span
					display inline-block
					padding 6px 0
					color $header
					text-decoration none
					transition color 100ms
					border none
					font-weight 300
					&.current
						color $main
					&:hover
						color $main
						cursor pointer
						&:before
							background-color $main
				&.dropdown
					span
						position relative
						&:after,
						&:before
							content ''
							position absolute
							top 2px
							right 0
							bottom 0
							margin auto -13px auto auto
							display inline-block
							width 7px
							height 1px
							background-color $header
							transition transform 200ms, background-color 100ms
						&:before
							margin-right -10px
							width 1px
							height 7px
						&.current
							&:after,
							&:before
								background-color $main
						&:hover
							&:after,
							&:before
								background-color $main
					ul
						display none
						li
							transform translateY(-10px)
							opacity 0
							for i in (1..10)
								&:nth-child({i})
									transition transform 400ms (i * 100)ms, opacity 200ms (i * 100)ms
							a
								font-size 13px
								&:before
									content ''
									display inline-block
									width 4px
									height 1px
									background-color $header
									margin-bottom 4px
									margin-right 6px
									transition background-color 100ms
								&.current
									&:before
										background-color $main
								&:hover
									&:before
										background-color $main
					&.expanded
						span
							&:before
								transform rotate(90deg)
						ul
							li
								transform translateY(0)
								opacity 1
								for i in (1..10)
									&:nth-child({i})
										transition transform 200ms (i * 100)ms, opacity 200ms (i * 100)ms
