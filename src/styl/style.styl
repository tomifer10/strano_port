					padding 20px
					text-align center
					transform scale(1.2)
					opacity 0
					transition transform 250ms, opacity 100ms
					h2
						color $white
						margin 0 0 5px
						padding 0
						font-size 19px
						line-height 1.5
					ul
						list-style none
						margin 0
						padding 0
						li
							display inline
							color alpha($white, 0.8)
							font-size 11px
							font-weight 400
							&:after
								content 'â€”'
								margin-left 3px
							&:last-child
								&:after
									content ''
									margin 0
			img
				width 100%
			&:before
				content ''
				display block
				width 100%
				height 100%
				position absolute
				top 0
				left 0
				transition opacity 250ms
				opacity 0
				background-color alpha($black, 0.6)
				z-index 1
		&:hover
			.picture
				.content
					.text
						transform scale(1)
						opacity 1
				&:before
					opacity 1
	&.columns-2
		.works-item
			width 48.825%
	&.columns-4
